<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="url">/my/students</t>
                <t t-set="title">Students</t>
                <t t-set="placeholder_count" t-value="'student_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li  t-if="page_name == 'student_list'" class="breadcrumb-item">Students</li>
        </xpath>
    </template>

    <template id="gm_student_list_view_portal">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-center">Name</th>
                        <th class="text-center">Student Code</th>
                        <th class="text-center">Gender</th>
                        <th class="text-center">Age</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="students" t-as="student">
                        <tr>
                            <td class="text-center">
                                <t t-out="student.student_code" />
                            </td>
                            <td class="text-center">
                                <t t-out="student.name" />
                            </td>
                            <td class="text-center">
                                <t t-out="student.gender" />
                            </td>
                            <td class="text-center">
                                <t t-out="student.age" />
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

</odoo>